rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserData().role == 'super_admin';
    }
    
    // Helper function to check if user is dept admin
    function isDeptAdmin() {
      return isAuthenticated() && getUserData().role == 'dept_admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Super admins can read all users
      allow read: if isSuperAdmin();
      
      // Users can update their own profile (except role)
      allow update: if isAuthenticated() && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // Super admins can create, update, and delete users
      allow create, update, delete: if isSuperAdmin();
    }
    
    // KPIs collection
    match /kpis/{kpiId} {
      // All authenticated users can read KPIs
      allow read: if isAuthenticated();
      
      // Super admins and dept admins can create KPIs
      allow create: if isAuthenticated() && (isSuperAdmin() || isDeptAdmin());
      
      // Super admins and dept admins can update their own department's KPIs
      allow update: if isAuthenticated() && 
                       (isSuperAdmin() || 
                        (isDeptAdmin() && getUserData().departmentId == resource.data.departmentId));
      
      // Only super admins can delete KPIs
      allow delete: if isSuperAdmin();
    }
  }
}
