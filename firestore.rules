    }

    match /scheduled_support_visits/{visitId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin() || isDeptAdmin();
    }

    match /accredited_supported_facilities/{facilityId} {
      allow read: if isAuthenticated();
