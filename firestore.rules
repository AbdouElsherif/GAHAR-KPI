    }

    match /medical_professionals_by_category/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin() || isDepartmentAdmin('dept7');
    }

    match /medical_professionals_by_governorate/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin() || isDepartmentAdmin('dept7');
    }

    // Training Entities (الجهات الحاصلة على التدريب for dept1)
    match /training_entities/{entityId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin() || isDepartmentAdmin('dept1');
    }

    // Program Types (نوع البرنامج for dept1)
    match /program_types/{programId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin() || isDepartmentAdmin('dept1');
    }
  }
}

